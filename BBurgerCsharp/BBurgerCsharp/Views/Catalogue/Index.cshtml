@model BBurgerCsharp.Web.Models.ViewModels.CatalogueViewModel

@{
    ViewData["Title"] = "Catalogue";
}

<h1 class="mb-4"><i class="fas fa-book"></i> Notre Catalogue</h1>

<!-- Filtres -->
<div class="btn-group mb-4" role="group">
    <a asp-action="Index" class="btn @(string.IsNullOrEmpty(Model.FiltreActif) ? "btn-danger" : "btn-outline-danger")">
        <i class="fas fa-th"></i> Tout
    </a>
    <a asp-action="Index" asp-route-filtre="burger" 
       class="btn @(Model.FiltreActif == "burger" ? "btn-danger" : "btn-outline-danger")">
        <i class="fas fa-hamburger"></i> Burgers
    </a>
    <a asp-action="Index" asp-route-filtre="menu" 
       class="btn @(Model.FiltreActif == "menu" ? "btn-danger" : "btn-outline-danger")">
        <i class="fas fa-box"></i> Menus
    </a>
</div>

<!-- Burgers -->
@if (Model.Burgers.Any())
{
    <h2 class="mb-3"><i class="fas fa-hamburger"></i> Burgers</h2>
    <div class="row mb-5">
        @foreach (var burger in Model.Burgers)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@burger.Image" class="card-img-top" alt="@burger.Nom" 
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@burger.Nom</h5>
                        <p class="card-text text-danger fw-bold fs-5">@burger.PrixFormate</p>
                        <a asp-action="DetailsBurger" asp-route-id="@burger.Id" 
                           class="btn btn-danger w-100">
                            <i class="fas fa-eye"></i> Voir détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Menus -->
@if (Model.Menus.Any())
{
    <h2 class="mb-3"><i class="fas fa-box"></i> Menus</h2>
    <div class="row">
        @foreach (var menuAvecPrix in Model.Menus)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-warning">
                    <div class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">
                        Menu Complet
                    </div>
                    <img src="@menuAvecPrix.Menu.Image" class="card-img-top" alt="@menuAvecPrix.Menu.Nom" 
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@menuAvecPrix.Menu.Nom</h5>
                        <p class="text-muted small">
                            @foreach (var burger in menuAvecPrix.Burgers)
                            {
                                <span>@burger.Nom</span>
                            }
                            + Boisson + Frites
                        </p>
                        <p class="card-text text-danger fw-bold fs-5">
                            @menuAvecPrix.PrixTotal.ToString("N0") FCFA
                        </p>
                        <a asp-action="DetailsMenu" asp-route-id="@menuAvecPrix.Menu.Id" 
                           class="btn btn-warning w-100">
                            <i class="fas fa-eye"></i> Voir détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (!Model.Burgers.Any() && !Model.Menus.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Aucun produit disponible pour le moment.
    </div>
}