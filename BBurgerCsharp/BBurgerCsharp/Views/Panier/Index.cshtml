@model List<BBurgerCsharp.Web.Models.ViewModels.PanierItemViewModel>

@{
    ViewData["Title"] = "Panier";
    var total = ViewBag.Total ?? 0m;
}

<h1 class="mb-4"><i class="fas fa-shopping-cart"></i> Mon Panier</h1>

@if (Model.Count == 0)
{
    <div class="alert alert-info text-center py-5">
        <i class="fas fa-shopping-cart fa-3x mb-3"></i>
        <h4>Votre panier est vide</h4>
        <p>Commencez par ajouter des produits !</p>
        <a asp-controller="Catalogue" asp-action="Index" class="btn btn-danger mt-3">
            <i class="fas fa-utensils"></i> Voir le catalogue
        </a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <div class="card mb-3 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-3">
                            <img src="@item.Image" class="img-fluid rounded-start" alt="@item.Nom" 
                                 style="height: 150px; width: 100%; object-fit: cover;">
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title">
                                            @item.Nom
                                            @if (item.Type == "menu")
                                            {
                                                <span class="badge bg-warning text-dark">Menu</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Burger</span>
                                            }
                                        </h5>
                                        
                                        @if (item.Complements.Any())
                                        {
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-plus-circle"></i> Compléments :
                                                    @string.Join(", ", item.Complements.Select(c => c.Nom))
                                                </small>
                                            </p>
                                        }
                                        
                                        <p class="card-text">
                                            <strong>Prix unitaire :</strong> @($"{item.Prix:N0} FCFA") 
                                            @if (item.Complements.Any())
                                            {
                                                <br>
                                                <strong>Compléments :</strong> 
                                                @($"{item.Complements.Sum(c => c.Prix):N0} FCFA") 
                                            }
                                        </p>
                                        
                                        <p class="card-text">
                                            <strong>Quantité :</strong> @item.Quantite
                                        </p>
                                        
                                        <p class="card-text">
                                            <strong class="text-danger fs-5">
                                                Sous-total : @item.SousTotal.ToString("N0") FCFA 
                                            </strong>
                                        </p>
                                    </div>
                                    
                                    <form asp-action="Supprimer" method="post" class="d-inline">
                                        <input type="hidden" name="index" value="@i" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Supprimer cet article ?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Récapitulatif -->
        <div class="col-md-4">
            <div class="card shadow sticky-top" style="top: 20px;">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-calculator"></i> Récapitulatif</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Nombre d'articles :</span>
                        <strong>@Model.Count</strong>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <strong class="fs-5">Total :</strong>
                        <strong class="text-danger fs-4">@total.ToString("N0") FCFA</strong>
                    </div>

                    @if (Context.Session.GetInt32("ClientId").HasValue)
                    {
                        <div class="d-grid gap-2">
                            <a asp-controller="Commande" asp-action="Create" class="btn btn-danger btn-lg">
                                <i class="fas fa-check"></i> Commander
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i> Connectez-vous pour commander
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-danger">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </a>
                        </div>
                    }

                    <form asp-action="Vider" method="post" class="mt-3">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-danger" 
                                    onclick="return confirm('Vider tout le panier ?')">
                                <i class="fas fa-trash"></i> Vider le panier
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Catalogue" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Continuer mes achats
                </a>
            </div>
        </div>
    </div>
}